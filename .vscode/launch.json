{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "antlr-hello_world",
            "input": "${workspaceFolder}/Examples/test.penguin",
            "grammar": "${workspaceFolder}/PenguinLangSyntax/PenguinLang.g4",
            "startRule": "compilationUnit",
            "visualParseTree": true
        },
        {
            "name": "dotnet debug",
            "type": "coreclr",
            "request": "launch",
            "windows": {
                "preLaunchTask": "dotnet build win"
            },
            "linux": {
                "preLaunchTask": "dotnet build linux"
            },
            "program": "${workspaceFolder}/BabyPenguin/bin/Debug/net8.0/BabyPenguin.dll",
            "args": [
                "${workspaceFolder}/Examples/test.penguin",
                "-r",
                "report.txt"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "launch dap",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/BabyPenguin/bin/Debug/net8.0/BabyPenguin.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach",
            "processName": "MagellanicPenguinLSP.exe"
            // "processId": "${command:pickProcess}"
        },
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "windows": {
                "preLaunchTask": "dotnet build win"
            },
            "linux": {
                "preLaunchTask": "dotnet build linux"
            },
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/MagellanicPenguin/vscode"
            ]
        },
        {
            "name": "PenguinLang Debug",
            "type": "penguinlang",
            "windows": {
                "preLaunchTask": "dotnet build win"
            },
            "linux": {
                "preLaunchTask": "dotnet build linux"
            },
            "request": "launch",
            "program": "${workspaceFolder}/Examples/test.penguin",
            "stopAtEntry": true
        }
    ]
}