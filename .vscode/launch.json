{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "antlr-hello_world",
            "input": "${workspaceFolder}/Examples/HelloWorld/test.penguin",
            "grammar": "${workspaceFolder}/PenguinLangSyntax/PenguinLang.g4",
            "startRule": "compilationUnit",
            "visualParseTree": true
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/BabyPenguin/bin/Debug/net8.0/BabyPenguin.dll",
            "args": [
                "${workspaceFolder}/Examples/HelloWorld/test.penguin"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}