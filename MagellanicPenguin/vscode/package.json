{
  "name": "penguinlang",
  "displayName": "PenguinLang",
  "repository": "https://github.com/CaulyKan/PenguinLang",
  "description": "PenguinLang language support for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "penguinlang",
        "aliases": [
          "Penguin Lang",
          "penguinlang"
        ],
        "extensions": [
          ".penguin"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "penguinlang",
        "scopeName": "source.penguinlang",
        "path": "./syntaxes/penguinlang.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "penguinlangvscode.restartLanguageServer",
        "title": "PenguinLang: Restart Language Server",
        "category": "PenguinLang"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "penguinlang-lsp configuration",
      "properties": {
        "penguinlangvscode.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "penguinlangvscode.dapTrace": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "on"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the DAP server."
        },
        "penguinlangvscode.enableInlayHints": {
          "type": "boolean",
          "default": true,
          "description": "Enable inlay hints for Brainfuck code. default: true"
        }
      }
    },
    "debuggers": [
      {
        "type": "penguinlang",
        "label": "Penguin Lang Debugger",
        "windows": {
          "program": "Y:\\Workspace\\penguinlang\\MagellanicPenguin\\DAP\\bin\\Debug\\net8.0\\MagellanicPenguinDAP.exe"
        },
        "linux": {
          "program": "/home/cauly/workspace/repos/penguinlang/MagellanicPenguin/DAP/bin/Debug/net8.0/MagellanicPenguinDAP"
        },
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "The penguinlang file to debug",
                "default": "${workspaceFolder}/Examples/HelloWorld/test.penguin"
              },
              "stopAtEntry": {
                "type": "boolean",
                "description": "Automatically stop the debugger at the first line of the program",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "PenguinLang Debug",
            "type": "penguinlang",
            "request": "launch",
            "program": "${workspaceFolder}/Examples/HelloWorld/test.penguin",
            "stopAtEntry": false
          }
        ]
      }
    ]
  },
  "scripts": {
    "package": "make-dir server/windows && make-dir server/ && cpy \"../MagellanicPenguin/bin/Debug/net8.0/*\" server/  && vsce package -o penguinlang.vsix",
    "vscode:prepublish": "npm run esbuild-base -- --minify && make-dir server/ && cpy \"../MagellanicPenguin/bin/Debug/net8.0/*\" server/ ",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src --ext .ts,.tsx",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "postinstall": "cd client && npm install && cd .."
  },
  "activationEvents": [
    "onLanguage:penguinlang"
  ],
  "main": "./out/main.js",
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "cpy-cli": "^4.2.0",
    "esbuild": "^0.17.10",
    "eslint": "^8.26.0",
    "make-dir-cli": "^3.0.0",
    "mocha": "^9.2.1",
    "typescript": "^4.8.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}